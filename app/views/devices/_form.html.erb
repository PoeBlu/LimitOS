<%= form_for @device, :html => { :class => "form-horizontal device" } do |f| %>

  <% if @parent_device.present? %>
    <%= hidden_field_tag :parent_device_id, @parent_device.id %>
  <% end %>

  <% if @device.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @device.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :device_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
      <%= f.select :device_type, Device::DEVICE_TYPES, { include_blank: true }, { class: 'form-control' } %>
    </div>
    <%= f.error_span(:device_type) %>
  </div>

  <% if @device.parent_device.present? %>
    <div class="form-group">
      <%= f.label :i2c_address, :class => 'control-label col-lg-2' %>
      <div class="col-lg-6">
        <%= f.text_field :i2c_address, class: 'form-control', placeholder: 'only applicable for slave devices, example: 0x04' %>
      </div>
      <%= f.error_span(:i2c_address) %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :broadcast_to_device, :class => 'control-label col-lg-2' %>
    <div class="col-lg-6">
      <%= f.select :broadcast_to_device_id, @devices.map{ |device| [device.display_name, device.id] }, { include_blank: true }, { class: 'form-control' } %>
    </div>
    <%= f.error_span(:broadcast_to_device) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-6">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                devices_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
