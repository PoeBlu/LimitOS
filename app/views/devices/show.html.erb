<div class="page-header">
  <h1>
    <%= @device.display_name %>
    <div class="pull-right">
      <%= link_to 'Edit Device', edit_device_path(@device), :class => 'btn btn-default btn-sm' %>
      <%= link_to 'Delete Device',
                    device_path(@device),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger btn-sm' %>
    </div>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Device Type:</strong></dt>
  <dd><%= @device.device_type %></dd>

  <% if @device.parent_device.present? %>
    <dt><strong>I2C Address:</strong></dt>
    <dd><%= @device.i2c_address %></dd>
  <% end %>

  <% if @device == @master_device %>
    <dt><strong>Auth Token:</strong></dt>
    <dd><%= @master_device.auth_token %></dd>
  <% end %>

  <% if @device.parent_device.present? %>
    <dt><strong>Parent Device:</strong></dt>
    <dd><%= link_to @device.parent_device.name, @device.parent_device %></dd>
  <% end %>

  <% if @device.devices.present? %>
    <dt><strong>Children Devices:</strong></dt>
    <dd>
      <% @device.devices.each do |device| %>
        <%= link_to device.name, device %><br>
      <% end %>
    </dd>
  <% end %>

  <% if @device.broadcast_to_device.present? %>
    <dt><strong>Broadcast to Device:</strong></dt>
    <dd><%= link_to @device.broadcast_to_device.name, @device.broadcast_to_device %></dd>
  <% end %>

</dl>

<% if @device.device_type == 'raspberry_pi' %>

  <%= link_to 'Raspberry Pi Nodejs Script', nodejs_script_device_path(@master_device) %>
  <br>
  <a id="reinstall_link">Reinstall LimitOS on device</a>
  <br>
  <div id="reinstall_div" class="hidden">
    Enter the following command on your Raspberry Pi to reinstall the LimitOS process:
    <br>
    <pre>curl -sS --data "auth_token=<%= @device.master_device.auth_token %>" <%= full_url %>/devices/<%= @device.master_device.id %>/install | bash</pre>
  </div>

<% elsif @device.device_type == 'arduino' %>

  <a id="arduino_setup_link">Arduino Setup</a>
  <br>
  <div id="arduino_setup_div" class="alert alert-info hidden">
    <h4>Arduino Setup</h4>
    <ol>
      <li>Connect the Arduino to a Raspberry Pi using I2C by connecting the ground, SDA, and SCL pins on the Arduino to the same pins on the Raspberry Pi.</li>
      <li>Copy and paste the <%= link_to 'Arduino script', arduino_script_device_path(@device) %> into the Arduino IDE and upload to the device.</li>
    </ol>
  </div>

<% end %>

<br><br>

<% if @device.parent_device.blank? %>
  <%= link_to 'Add Connected I2C Device', new_device_path(device_id: @device), class: 'btn btn-default btn-sm' %>
<% end %>

<br><br>

<h3>Pin Information</h3>
<% if @device.pins.present? %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Pin Number</th>
          <th>Type</th>
          <th>Minimum Value</th>
          <th>Maximum Value</th>
          <th>Output Pin Number</th>
          <th>Transform</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% @device.pins.each do |pin| %>
        <tr>
          <td><%= pin.name %></td>
          <td><%= pin.pin_number %></td>
          <td><%= pin.pin_type %></td>
          <td><%= pin.min %></td>
          <td><%= pin.max %></td>
          <td><%= pin.output_pin_number %></td>
          <td><%= pin.transform %></td>
          <td>
            <%= link_to 'Edit Pin', edit_device_pin_path(@device, pin), class: 'btn btn-sm btn-default' %>
            <%= link_to 'Remove Pin', device_pin_path(@device, pin), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>

<%= link_to 'Add New Pin', new_device_pin_path(@device), class: 'btn btn-default' %>

<br><br>

<div class="hidden">
  <h3>Synchronizations</h3>
  <% if @device.synchronizations.present? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% @device.synchronizations.each do |synchronization| %>
        <tr>
          <td><%= synchronization.name %></td>
          <td>
            <%= link_to 'Edit Synchronization', edit_device_synchronization_path(@device, synchronization), class: 'btn btn-sm btn-default' %>
            <%= link_to 'Remove Synchronization', device_synchronization_path(@device, synchronization), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
  <%= link_to 'Add New Synchronization', new_device_synchronization_path(@device), class: 'btn btn-default' %>
</div>

<br><br>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <h3>Device Controls</h3>

    <br>

    <div class="hidden">
      <%= render 'synchronization_controls' %>
    </div>

    <%= render 'controls' %>
  </div>

  <div class="col-xs-12 col-md-6">
    <h3>Logs</h3>
    
    <br>

    <%= render 'logs' %>
  </div>
</div>

<br><br>

<%= render 'javascript' %>
