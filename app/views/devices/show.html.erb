<%- model_class = Device -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @device.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:device_type) %>:</strong></dt>
  <dd><%= @device.device_type %></dd>
</dl>

<br>

<%= link_to 'Edit Device', edit_device_path(@device), :class => 'btn btn-default' %>
<%= link_to 'Delete Device',
              device_path(@device),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<br><br>

<h3>Pins</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Pin Number</th>
      <th>Name</th>
      <th>Type</th>
      <th>Minimum Value</th>
      <th>Maximum Value</th>
      <th>Action</th>
    </tr>
  </thead>
  <% @device.pins.each do |pin| %>
    <tr>
      <td><%= pin.pin_number %></td>
      <td><%= pin.name %></td>
      <td><%= pin.pin_type %></td>
      <td><%= pin.min %></td>
      <td><%= pin.max %></td>
      <td><%= link_to 'Edit Pin', edit_device_pin_path(@device, pin), class: 'btn btn-sm btn-default' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add New Pin', new_device_pin_path(@device), class: 'btn btn-primary' %>
