<div class="page-header">
  <h1>
    <%= @device.display_name %>
    <div class="pull-right">
      <%= link_to 'Delete',
                    device_path(@device),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger btn-sm' %>
    </div>
  </h1>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Edit Device</h4>
      </div>
      <div class="panel-body">
        <%= render :partial => 'form' %>
      </div>
    </div>

    <br><br>

    <% if @device.parent_device.blank? %>
      You can also  <%= link_to 'add a connected I<sup>2</sup>C device'.html_safe, new_device_path(device_id: @device, device_type: 'arduino') %> from here.
    <% end %>
  </div>
</div>
