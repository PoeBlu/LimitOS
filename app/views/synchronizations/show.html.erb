<%- model_class = Synchronization -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:device_id) %>:</strong></dt>
  <dd><%= @synchronization.device_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @synchronization.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:synchronization_type) %>:</strong></dt>
  <dd><%= @synchronization.synchronization_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:synchronization_number) %>:</strong></dt>
  <dd><%= @synchronization.synchronization_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:min) %>:</strong></dt>
  <dd><%= @synchronization.min %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max) %>:</strong></dt>
  <dd><%= @synchronization.max %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              synchronizations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_synchronization_path(@synchronization), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              synchronization_path(@synchronization),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
